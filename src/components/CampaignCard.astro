---
import type { CollectionEntry } from 'astro:content';

interface Props {
  campaign: CollectionEntry<'campaigns'>;
  sessionCount: number;
}

const { campaign, sessionCount } = Astro.props;
const { title, description, backgroundColor, textColor, image, startDate } = campaign.data;

const formattedDate = new Date(startDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long'
});
---

<a href={`/campaigns/${campaign.slug}`} class="campaign-card">
  <div 
    class="content" 
    style={`background-color: ${backgroundColor || '#2a2a2a'}; color: ${textColor || '#ffffff'}`}
  >
    {image && (
      <div class="image-wrapper">
        <img src={image} alt={title} />
      </div>
    )}
    <div class="card-content">
      <div class="header">
        <h2>{title}</h2>
        <span class="date">Started {formattedDate}</span>
      </div>
      <p>{description}</p>
      <div class="footer">
        <div class="session-count">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
          </svg>
          {sessionCount} {sessionCount === 1 ? 'Session' : 'Sessions'}
        </div>
        <span class="read-more">Read More â†’</span>
      </div>
    </div>
  </div>
</a>

<style>
  .campaign-card {
    text-decoration: none;
    display: block;
    transition: all 0.3s ease-in-out;
  }

  .campaign-card:hover {
    transform: translateY(-4px);
  }

  .content {
    border-radius: 1rem;
    overflow: hidden;
    height: 100%;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .image-wrapper {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .campaign-card:hover .image-wrapper img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1.5rem;
  }

  .header {
    margin-bottom: 1rem;
  }

  h2 {
    font-size: 1.5rem;
    margin: 0;
    margin-bottom: 0.5rem;
  }

  .date {
    font-size: 0.9rem;
    opacity: 0.7;
  }

  p {
    margin: 0;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
  }

  .session-count {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .read-more {
    font-weight: 500;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .campaign-card:hover .read-more {
    opacity: 1;
  }
</style>